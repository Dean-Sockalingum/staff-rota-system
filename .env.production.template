# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# 
# INSTRUCTIONS FOR HSCP/CGI IT TEAM:
# 1. Copy this file to .env.production on production server
# 2. Replace all <PLACEHOLDER> values with actual production values
# 3. Keep this file secure - DO NOT commit to version control
# 4. Ensure file permissions: chmod 600 .env.production
#
# Generated: December 26, 2025
# ========================================

# ========================================
# CRITICAL SECURITY SETTINGS
# ========================================

# Django Debug Mode - MUST BE FALSE IN PRODUCTION
DEBUG=False

# Production Secret Key - REPLACE WITH GENERATED KEY
# Generate new key with: python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=<GENERATED_SECRET_KEY_HERE>

# Allowed Hosts - Add your production domain(s)
# Example: staffrota.hscp.gov.uk,www.staffrota.hscp.gov.uk
ALLOWED_HOSTS=<YOUR_PRODUCTION_DOMAIN>,<YOUR_BACKUP_DOMAIN>

# CSRF Trusted Origins - Must match your production domain with https://
# Example: https://staffrota.hscp.gov.uk,https://www.staffrota.hscp.gov.uk
CSRF_TRUSTED_ORIGINS=https://<YOUR_PRODUCTION_DOMAIN>,https://<YOUR_BACKUP_DOMAIN>

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Database Engine - PostgreSQL recommended for production
DB_ENGINE=django.db.backends.postgresql

# PostgreSQL Connection Details
DB_NAME=staff_rota_production
DB_USER=<POSTGRES_USERNAME>
DB_PASSWORD=<SECURE_POSTGRES_PASSWORD>
DB_HOST=localhost
DB_PORT=5432

# Alternative: SQLite (not recommended for production)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=/path/to/production/db.sqlite3

# ========================================
# EMAIL CONFIGURATION (After HSCP/CGI Approval)
# ========================================

# Email Backend - SMTP for production
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Server Configuration
# For Office 365:
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# For Gmail:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# Email Credentials
EMAIL_HOST_USER=<HSCP_EMAIL_ADDRESS>
EMAIL_HOST_PASSWORD=<EMAIL_APP_PASSWORD>
DEFAULT_FROM_EMAIL=Staff Rota System <staffrota@hscp.gov.uk>

# Compliance Notification Recipients
COMPLIANCE_NOTIFICATION_EMAILS=compliance@hscp.gov.uk,managers@hscp.gov.uk

# ========================================
# REDIS CACHE (Optional - Recommended)
# ========================================

# Redis Connection String
# Format: redis://[:password]@host:port/db
REDIS_URL=redis://localhost:6379/0

# If Redis requires password:
# REDIS_URL=redis://:your_redis_password@localhost:6379/0

# ========================================
# STATIC & MEDIA FILES
# ========================================

# Static Files Directory (for collectstatic)
STATIC_ROOT=/var/www/staffrota/static

# Media Files Directory (for uploads)
MEDIA_ROOT=/var/www/staffrota/media

# Static/Media URL Paths
STATIC_URL=/static/
MEDIA_URL=/media/

# ========================================
# SECURITY SETTINGS
# ========================================

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF Security
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax

# HTTPS/SSL Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# ========================================
# LOGGING
# ========================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Directory
LOG_DIR=/var/log/staffrota

# ========================================
# APPLICATION SETTINGS
# ========================================

# Time Zone
TIME_ZONE=Europe/London

# Language Code
LANGUAGE_CODE=en-gb

# Site Name
SITE_NAME=Staff Rota System - HSCP

# Admin Email for Error Notifications
ADMINS=admin@hscp.gov.uk

# ========================================
# BACKUP SETTINGS
# ========================================

# Backup Directory
BACKUP_DIR=/var/backups/staffrota

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30

# ========================================
# MONITORING & PERFORMANCE
# ========================================

# Enable Query Logging (set to False after initial deployment)
SQL_DEBUG=False

# Cache Timeout (seconds)
CACHE_TIMEOUT=300

# Max Upload Size (bytes) - 10MB
MAX_UPLOAD_SIZE=10485760

# ========================================
# OPTIONAL: EXTERNAL INTEGRATIONS
# ========================================

# Google Maps API (for geocoding)
# GOOGLE_MAPS_API_KEY=<YOUR_GOOGLE_MAPS_KEY>

# Sentry Error Tracking (optional)
# SENTRY_DSN=<YOUR_SENTRY_DSN>

# ========================================
# END OF CONFIGURATION
# ========================================
