# Staff Rota System - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ===================
# Core Django Settings
# ===================

# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-very-long-secret-key-change-this-in-production

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===================
# Database Configuration
# ===================

# For SQLite (development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (production) - uncomment and configure
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=staff_rota
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# ===================
# Phase 6: Security Settings
# ===================

# Field encryption key for sensitive data (NI numbers, DoB, etc.)
# Generate: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
FIELD_ENCRYPTION_KEY=generate-your-own-key-using-command-above

# ===================
# Email Configuration
# ===================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP settings (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Default from email
DEFAULT_FROM_EMAIL=noreply@yourcaregroup.com

# ===================
# System Mode
# ===================

# DEMO or PRODUCTION
SYSTEM_MODE=DEMO

# ===================
# Celery Configuration (if using)
# ===================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===================
# Third-Party Services
# ===================

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+441234567890
